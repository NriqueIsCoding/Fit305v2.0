
<section id="cover" >
  <div id="cover-caption">
    <div class="container mb-5">
      <div class="col-sm-12 col-sm-offset-1">
        <h1 class="display-3">Fit 305</h1>
        <br>
        <% if current_customer || current_instructor %>
          <p class="h2 text-danger">Someone is already logged in...</p>
        <% else %>
          <%= form_tag sessions_path do %>

            <div class="d-flex justify-content-center">
              <form action="" class="form-inline">
                <div class="form-group pr-1">
                  <label class="sr-only">Email</label>
                  <%= text_field_tag :email, "", class:'form-control form-control-md', placeholder: 'user@example.com'%>
                  <!-- <input type="text" class= "form-control form-control-md" name="" value="" placeholder="user@example.com"> -->
                </div>
                <div class="form-group pr-1">
                  <label class="sr-only">Password</label>
                  <%= password_field_tag :password, "", class:'form-control form-control-md', placeholder: 'Password'%>
                  <!-- <input type="text" class= "form-control form-control-md" name="" value="" placeholder="Password"> -->
                </div>
                <div class="form-group pr-1">
                <%= submit_tag 'Login!', class:'btn btn-success btn-md bg-danger no-border'%>
                </div>
                <!-- <button class="btn btn-success btn-md bg-danger no-border" type="submit" name="button">Login!</button> -->
              </form>
            </div>
            <div class="d-flex justify-content-center">
              <% if flash[:notice] %>
                <div class="notice"><%= flash[:notice] %></div>
              <% end %>
            </div>
            <% end %>
          <!-- <p class="text-signup-message font-weight-bold">
            <a href="#" class="nounderline deco">Forgot username/password?</a>
            <a href="#" class="nounderline deco">Not enrolled? sign up now</a>
          </p> -->
        <% end %>
      </div>
    </div>
  </div>
</section>

